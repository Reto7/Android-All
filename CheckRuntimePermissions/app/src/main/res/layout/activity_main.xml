<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.ibw.reto.checkruntimepermissions.MainActivity"
    >

    <TextView
        android:id="@+id/label_ueberschrift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permission prÃ¼fen, z.B. CAMERA, CALL_PHONE,  READ_PHONE_NUMBER, BLUETOOTH"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textStyle="normal"
        />


    <EditText
        android:id="@+id/edit_feld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_marginStart="20dp"

        android:layout_below="@+id/label_ueberschrift"
        />


    <Button
        android:id="@+id/button_compute"
        android:text="Check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_alignBaseline="@+id/edit_feld"
        android:layout_alignBottom="@+id/edit_feld"
        android:layout_alignParentEnd="true"
        />

    <TextView
        android:id="@+id/label_ausgabe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="16sp"
        android:textStyle="normal"
        android:layout_below="@id/edit_feld"
        />
</RelativeLayout>

