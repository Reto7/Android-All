<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.ibw.reto.kontaktlistemitdetail.MainActivity">

    <TextView
        android:id="@+id/label_ueberschrift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Kontaktliste"
        android:textSize="16sp"
        android:textStyle="bold" />


    <EditText
        android:id="@+id/edit_eintrag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_ueberschrift"
        android:inputType="text"
        android:visibility="invisible" />


    <Button
        android:id="@+id/button_compute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/edit_eintrag"
        android:layout_alignBottom="@+id/edit_eintrag"
        android:layout_alignParentEnd="true"
        android:text="Add"
        android:visibility="invisible" />

    <ListView
        android:id="@+id/liste"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:divider="@android:color/holo_blue_bright"
        android:dividerHeight="1sp"></ListView>

</RelativeLayout>

